<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainActivityLayout"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="4"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="1dp"
                    android:textColor="#3B5998"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/editttext_shape"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/settingText"
                    android:background="@drawable/ic_settings_applications_black_24dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Balance"
                    android:gravity="center"
                    android:id="@+id/fg"
                    android:background="@drawable/editttext_shape"
                    android:textColor="@color/green"
                    android:textSize="30dp"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="@color/green"
                    android:id="@+id/mainBalance"
                    android:layout_below="@id/fg"
                    android:textSize="30dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/aa"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:paddingLeft="15dp"
                    android:id="@+id/currentDate"
                    android:textSize="20sp"
                    android:textColor="#3B5998"
                    android:layout_toRightOf="@id/aa"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Spending :"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"
                    android:id="@+id/kk"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:paddingLeft="15dp"
                    android:textSize="20sp"
                    android:id="@+id/lastSpending"
                    android:textColor="@color/blue"
                    android:layout_toRightOf="@id/kk"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spending"
                android:textSize="18dp"
                android:id="@+id/sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="18sp"
                android:textColor="@color/blue"
                android:id="@+id/spendBalanceText"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earning"
                android:textSize="18dp"
                android:layout_below="@id/sp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/earnBalanceText"
                android:text="$0"
                android:textColor="@color/green"
                android:layout_below="@id/spendBalanceText"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="2"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginRight="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excess Spending Alert"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="3"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:textSize="20sp"
                android:background="@drawable/fbstyle_button"
                android:id="@+id/addSpendingText"
                android:textColor="#FFF"
                android:text="Add Spending"/>

            <TextView
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="45dp"
                android:textSize="25sp"
                android:textColor="#FFF"
                android:id="@+id/addEarningText"
                android:background="@drawable/circle_shape"
                android:text="Add Earning"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>