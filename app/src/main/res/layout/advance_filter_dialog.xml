<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="18sp"
                android:text="Filter by : "
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/daysChecked"
                    android:layout_alignParentLeft="true"
                    android:text="Days"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:hint="Enter Days"
                    android:id="@+id/dayTextDiolog"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monthChecked"
                    android:layout_alignParentLeft="true"
                    android:text="Month"/>

                <Spinner
                    android:layout_width="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="3dp"
                    android:id="@+id/monthSpinner"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yearChecked"
                    android:layout_alignParentLeft="true"
                    android:text="Year"/>

                <Spinner
                    android:layout_width="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/yearItemSpinner"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/categoryChecked"
                    android:layout_alignParentLeft="true"
                    android:text="Category"/>

                <Spinner
                    android:layout_width="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/categoryItemSpinner"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>